# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase (Database + Auth + Storage)
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Redis (Cache & Queue)
REDIS_URL=redis://localhost:6379

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# Anthropic API (Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Google OAuth 2.0 (Blogger API)
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/callback

# Google Blogger API
BLOGGER_API_KEY=your-blogger-api-key

# JWT Secret (for session management)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Session
SESSION_SECRET=your-session-secret-change-this-in-production

# Image Upload
MAX_IMAGE_SIZE=5242880
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,webp

# Content Generation
MAX_BLOGS_PER_USER=100
DEFAULT_CONTENT_LANGUAGE=tr

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Logging
LOG_LEVEL=info

# Production-only (set in Coolify)
# NEXT_PUBLIC_APP_URL=https://blogyapay.setrox.net
# NEXT_PUBLIC_SUPABASE_URL=https://your-supabase-instance.yourdomain.com
# NEXT_PUBLIC_SUPABASE_ANON_KEY=production-anon-key
# SUPABASE_SERVICE_ROLE_KEY=production-service-role-key
# GOOGLE_REDIRECT_URI=https://blogyapay.setrox.net/api/auth/callback
